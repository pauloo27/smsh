          {
            "type": "ExitWithCode",
            "value": "0"
          }
        ]
      },
      {
        "type": "Button",
        "text": "󰗽",
        "tooltip": "Logout",
        "actions": [
          {
            "type": "Shell",
            "value": "notify-send logout"
          },
          {
            "type": "ExitWithCode",
            "value": "0"
          }
        ]
      }
    ]
  }
