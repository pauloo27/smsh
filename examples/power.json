    "orientation": "Vertical",
    "children": [
      {
        "type": "Button",
        "text": "",
        "tooltip": "Shutdown",
        "actions": [
          {
            "type": "Shell",
            "value": "notify-send shutdown"
          },
          {
            "type": "ExitWithCode",
            "value": "0"
          }
        ]
      },
      {
        "type": "Button",
        "text": "",
